## rclone
# export RCLONE_PROGRESS=true

## docker
# launch a temporary shell on a given image
function d() {
  docker run -it --rm $1 /bin/sh
}
# hook into a running container
function nse() {
  docker exec -it $1 sh
}

## direnv
# https://github.com/direnv/direnv
eval "$(direnv hook zsh)"

